<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="style_home_radio">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">@drawable/colors_radio</item>
        <item name="android:textSize">10sp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="style_video_radio">
        <item name="android:paddingBottom">5dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:background">@drawable/colors_video_radio_bg</item>
        <item name="android:drawablePadding">3dp</item>
        <item name="android:textColor">@drawable/colors_video_radio</item>
        <item name="android:textSize">11sp</item>
        <item name="android:button">@null</item>
        <item name="android:layout_marginTop">3dp</item>
        <item name="android:gravity">center_horizontal</item>
    </style>


    <style name="style_police_radio">
        <item name="android:paddingBottom">8dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:background">@drawable/colors_police_radio_bg</item>
        <item name="android:textColor">@drawable/colors_video_radio</item>
        <item name="android:textSize">10sp</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
    </style>


        <style name="style_text_selected">
            <item name="android:background">@drawable/top_left_select_bg</item>
            <item name="android:padding">6dp</item>
            <item name="android:textSize">15sp</item>
            <item name="android:layout_gravity">center</item>
            <item name="android:gravity">center</item>
            <item name="android:textColor">@drawable/top_text_select_bg</item>
        </style>
    <style name="style_text_no_selected">
        <item name="android:background">@drawable/top_right_select_bg</item>
        <item name="android:padding">6dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@drawable/top_text_select_bg</item>
    </style>
    <!-- 自定义loading dialog -->
    <style name="loading_dialog" parent="android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="mProgress_circle">
        <item name="android:indeterminateDrawable">@drawable/progressbar</item>
        <item name="android:minWidth">25dp</item>
        <item name="android:indeterminate">true</item>
        <item name="android:minHeight">25dp</item>
        <item name="android:maxWidth">60dp</item>
        <item name="android:maxHeight">60dp</item>
    </style>

    <style name="PopupAnimation" parent="android:Animation"  mce_bogus="1">
        <item name="android:windowEnterAnimation">@anim/popup_in</item>
        <item name="android:windowExitAnimation">@anim/popup_out</item>
    </style>


    <!-- 自定义仿IOS的AlertDialog的样式 -->
    <style name="AlertDialogStyle" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>


    <style name="MyDialogStyleBottom" parent="android:Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <!-- 边框 -->
        <item name="android:windowIsFloating">false</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 半透明 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 无标题 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 模糊 -->
    </style>

</resources>

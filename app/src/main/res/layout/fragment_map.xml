<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <SurfaceView
        android:layout_width="1dp"
        android:layout_height="1dp" />

    <RelativeLayout
        android:id="@+id/mTexturemap"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/map_top_bg">

        <ImageView
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/etcmap_searchbtn" />

        <EditText
            android:id="@+id/search_dev_name"
            android:textColor="@color/text_color"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="10dp"
            android:background="@color/white"
            android:hint="请输入设备名"
            android:textColorHint="@color/text_color"
            android:textSize="13sp" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">

        <LinearLayout
            android:background="@color/alertdialog_line"
            android:layout_marginLeft="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/etcmap_add"
                android:background="@color/white"
                android:layout_margin="1dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="center"
                android:src="@mipmap/etcmap_add" />
            <ImageView
                android:id="@+id/etcmap_subtraction"
                android:background="@color/white"
                android:layout_margin="1dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:scaleType="center"
                android:src="@mipmap/etcmap_subtraction" />
        </LinearLayout>
        <ImageView
            android:layout_marginTop="10dp"
            android:id="@+id/return_location"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginBottom="20dp"
            android:src="@mipmap/etcmap_center" />

        <LinearLayout
            android:id="@+id/map_dev_info_bg"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/map_top_bg"
            android:orientation="horizontal"
            android:visibility="gone">


            <ImageView
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:layout_marginBottom="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="20dp"
                android:src="@mipmap/etcmap_video" />

            <TextView
                android:id="@+id/map_dev_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="1"
                android:text="EIMO.OPP"
                android:textColor="@color/biantai_gray"
                android:textSize="@dimen/textSize_13sp" />

            <View
                android:layout_width="@dimen/layout_0.5dp"
                android:layout_height="match_parent"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="@dimen/layout_15dp"
                android:background="@color/alertdialog_line1"></View>

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="@dimen/layout_10dp"
                android:src="@mipmap/etcmap_videoplay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:text="预览"
                android:textColor="@color/biantai_gray"
                android:textSize="@dimen/textSize_12sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>
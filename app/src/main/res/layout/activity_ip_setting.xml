<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/back_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/top_app_color"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/ip_go_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:scaleType="center"
            android:src="@mipmap/registernaritem" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="设置登录IP"
            android:textColor="@color/top_text_color"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/ip_sure"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:text="确定"
            android:textColor="@color/main_color"
            android:textSize="16sp" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/back_color"
            android:orientation="vertical" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/alertdialog_line"
                android:padding="10dp"
                android:text="当前IP地址"
                android:textColor="@color/biantai_gray"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/back_color"
                android:orientation="horizontal" >

                <EditText
                    android:id="@+id/input_ip"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="@null"
                    android:hint="请输入IP地址:端口号"
                    android:digits="0123456789.:"
                    android:paddingLeft="20dp"
                    android:singleLine="true"
                    android:textColor="@color/biantai_gray"
                    android:textColorHint="@color/top_text_color"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/clear_ip"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginRight="20dp"
                    android:src="@mipmap/login_iplist_close" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/alertdialog_line"
                android:padding="10dp"
                android:text="历史IP地址"
                android:textColor="@color/main_color"
                android:textSize="18sp" />

            <ListView
                android:id="@+id/history_ip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:divider="@null"
                android:listSelector="#00000000" >
            </ListView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>